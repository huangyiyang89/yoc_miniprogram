<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">下一次活动人数统计</view>
    <view wx:for="{{raiders}}" wx:key="id" class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="{{item.user.classIcon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">{{item.user.name}}</view>
        <view class="weui-cell__ft">{{item.possibility}}</view>
      </view>
    </view>
  </view>
</view>